---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

const articles = await getCollection('articles');

// Sort articles by date, newest first
articles.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const pageTitle = "Artikel & Panduan Website - Webniaga.my";
const pageDescription = "Koleksi artikel dan panduan terkini mengenai cara buat website murah, SEO, dan pemasaran digital untuk perniagaan kecil di Malaysia.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-primary-600 to-primary-800 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-10 w-32 h-32 bg-white rounded-full"></div>
      <div class="absolute bottom-20 right-10 w-24 h-24 bg-white rounded-full"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-white rounded-full"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center bg-white/10 text-white px-4 py-2 rounded-full text-sm font-medium mb-6">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          Panduan & Artikel
        </div>
        
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
          Artikel & <span class="text-primary-200">Panduan Website</span>
        </h1>
        
        <p class="text-xl text-primary-100 leading-relaxed">
          Koleksi panduan, tips, dan artikel terkini untuk membantu perniagaan anda berkembang secara online dengan website yang berkesan.
        </p>
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      {articles.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {articles.map((article) => (
            <article class="group bg-white rounded-3xl p-8 shadow-card hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-100 flex flex-col">
              <div class="flex items-center justify-between mb-4">
                <span class="bg-primary-100 text-primary-800 text-xs font-semibold px-3 py-1.5 rounded-full">
                  {article.data.keyword}
                </span>
                <time class="text-sm text-gray-500" datetime={article.data.date.toISOString()}>
                  {article.data.date.toLocaleDateString('ms-MY', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </div>
              
              <h2 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-primary-600 transition-colors duration-200 leading-tight">
                {article.data.title}
              </h2>
              
              <p class="text-gray-600 leading-relaxed mb-6 flex-grow">
                {article.data.description}
              </p>
              
              {article.data.tags && article.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-6">
                  {article.data.tags.slice(0, 3).map((tag) => (
                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs">
                      #{tag}
                    </span>
                  ))}
                </div>
              )}
              
              <a 
                href={`/articles/${article.slug}`} 
                class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold transition-all duration-200 group-hover:translate-x-1 transform mt-auto"
              >
                Baca Artikel Penuh
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Tiada Artikel Lagi</h3>
          <p class="text-gray-600 mb-8">Artikel akan ditambah tidak lama lagi. Sila kembali semula.</p>
          <a href="/" class="inline-flex items-center bg-primary-600 text-white font-semibold py-3 px-6 rounded-full hover:bg-primary-700 transition-colors duration-200">
            Kembali ke Laman Utama
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter/CTA Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-gradient-to-r from-primary-50 to-secondary-50 rounded-3xl p-12 border border-primary-100">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            Perlukan Website untuk Perniagaan Anda?
          </h3>
          <p class="text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
            Selepas membaca artikel-artikel ini, mungkin anda sudah bersedia untuk memulakan projek website anda. Kami sedia membantu!
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center bg-primary-600 text-white font-semibold py-4 px-8 rounded-full shadow-xl hover:bg-primary-700 hover:shadow-2xl transition-all duration-300 hover:scale-105 transform group">
              Dapatkan Sebutharga Percuma
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
            <a href="https://wa.me/601158913099?text=Saya%20berminat%20dengan%20servis%20buat%20website" class="inline-flex items-center border-2 border-primary-600 text-primary-600 font-semibold py-4 px-8 rounded-full hover:bg-primary-600 hover:text-white transition-all duration-300 hover:scale-105 transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"></path>
              </svg>
              WhatsApp Kami
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>