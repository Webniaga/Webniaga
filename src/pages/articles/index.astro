---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const articles = await getCollection('articles');

// Sort articles by date, newest first
articles.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const pageTitle = "Artikel & Panduan Website - Webniaga.my";
const pageDescription = "Koleksi artikel dan panduan terkini mengenai cara buat website murah, SEO, dan pemasaran digital untuk perniagaan kecil di Malaysia.";
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-600 text-white relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 left-10 w-32 h-32 bg-white rounded-full blur-xl"></div>
      <div class="absolute bottom-20 right-10 w-24 h-24 bg-white rounded-full blur-xl"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-white rounded-full blur-xl"></div>
    </div>
    
    <!-- Animated grid pattern -->
    <div class="absolute inset-0 opacity-5">
      <svg width="100%" height="100%">
        <defs>
          <pattern id="article-grid" width="60" height="60" patternUnits="userSpaceOnUse">
            <path d="M 60 0 L 0 0 0 60" fill="none" stroke="currentColor" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#article-grid)" class="text-white" />
      </svg>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-medium mb-6 border border-white/20">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          Panduan & Artikel Terkini
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Artikel & <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-200 to-white">Panduan Website</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-primary-100 leading-relaxed max-w-3xl mx-auto">
          Koleksi panduan, tips, dan artikel terkini untuk membantu perniagaan anda berkembang secara online dengan website yang berkesan.
        </p>
        
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center space-x-2 text-sm text-primary-200 mt-8">
          <a href="/" class="hover:text-white transition-colors duration-200 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Laman Utama
          </a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-white font-medium">Artikel</span>
        </nav>
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      {articles.length > 0 ? (
        <>
          <!-- Articles Count -->
          <div class="text-center mb-12">
            <p class="text-gray-600 text-lg">
              Menunjukkan <span class="font-semibold text-primary-600">{articles.length}</span> artikel
            </p>
          </div>
          
          <!-- Articles Grid -->
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
            {articles.map((article, index) => (
              <article class="group bg-white rounded-3xl shadow-card hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 border border-gray-100 flex flex-col overflow-hidden">
                <!-- Article Header -->
                <div class="p-8 flex-grow">
                  <div class="flex items-center justify-between mb-6">
                    <span class="bg-gradient-to-r from-primary-500 to-primary-600 text-white text-xs font-bold px-3 py-1.5 rounded-full uppercase tracking-wide">
                      {article.data.keyword}
                    </span>
                    <time class="text-sm text-gray-500 font-medium" datetime={article.data.date.toISOString()}>
                      {article.data.date.toLocaleDateString('ms-MY', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  
                  <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-4 group-hover:text-primary-600 transition-colors duration-300 leading-tight line-clamp-3">
                    {article.data.title}
                  </h2>
                  
                  <p class="text-gray-600 leading-relaxed mb-6 line-clamp-3">
                    {article.data.description}
                  </p>
                  
                  {article.data.tags && article.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-6">
                      {article.data.tags.slice(0, 3).map((tag) => (
                        <span class="bg-gray-100 text-gray-600 px-2.5 py-1 rounded-full text-xs font-medium hover:bg-primary-50 hover:text-primary-700 transition-colors duration-200">
                          #{tag}
                        </span>
                      ))}
                      {article.data.tags.length > 3 && (
                        <span class="text-gray-400 text-xs font-medium px-2.5 py-1">
                          +{article.data.tags.length - 3} lagi
                        </span>
                      )}
                    </div>
                  )}
                </div>
                
                <!-- Article Footer -->
                <div class="p-8 pt-0">
                  <a 
                    href={`/articles/${article.slug}`} 
                    class="inline-flex items-center justify-center w-full bg-primary-600 text-white font-semibold py-3 px-6 rounded-2xl hover:bg-primary-700 transition-all duration-300 hover:scale-105 transform group-hover:shadow-lg"
                  >
                    Baca Artikel Penuh
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-20">
          <div class="w-32 h-32 bg-gradient-to-br from-primary-100 to-primary-200 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-3xl font-bold text-gray-900 mb-4">Tiada Artikel Lagi</h3>
          <p class="text-gray-600 mb-8 text-lg max-w-md mx-auto">Artikel akan ditambah tidak lama lagi. Sila kembali semula untuk kandungan terbaru.</p>
          <a href="/" class="inline-flex items-center bg-primary-600 text-white font-semibold py-3 px-6 rounded-full hover:bg-primary-700 transition-all duration-300 hover:scale-105 transform shadow-lg">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Kembali ke Laman Utama
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter/CTA Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 rounded-4xl p-12 lg:p-16 border border-primary-100 shadow-xl relative overflow-hidden">
          <!-- Background decoration -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-primary-200/20 to-secondary-200/20 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-accent-200/20 to-primary-200/20 rounded-full blur-3xl"></div>
          
          <div class="relative z-10 text-center">
            <div class="inline-flex items-center bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-semibold mb-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Siap untuk Mula?
            </div>
            
            <h3 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
              Perlukan Website untuk <br/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600">Perniagaan Anda</span>?
            </h3>
            
            <p class="text-xl text-gray-600 mb-10 max-w-3xl mx-auto leading-relaxed">
              Selepas membaca artikel-artikel ini, mungkin anda sudah bersedia untuk memulakan projek website anda. Kami sedia membantu dengan harga yang berpatutan!
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href="#contact" class="inline-flex items-center bg-primary-600 text-white font-bold py-4 px-8 rounded-full shadow-xl hover:bg-primary-700 hover:shadow-2xl transition-all duration-300 hover:scale-105 transform group">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Dapatkan Sebutharga Percuma
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
              
              <a href="https://wa.me/601158913099?text=Saya%20berminat%20dengan%20servis%20buat%20website" class="inline-flex items-center border-2 border-primary-600 text-primary-600 font-bold py-4 px-8 rounded-full hover:bg-primary-600 hover:text-white transition-all duration-300 hover:scale-105 transform">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"></path>
                </svg>
                WhatsApp Kami
              </a>
            </div>
            
            <!-- Trust indicators -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 pt-8 border-t border-gray-200">
              <div class="text-center">
                <div class="w-12 h-12 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h4 class="font-bold text-gray-900 mb-1">RM390 Sahaja</h4>
                <p class="text-gray-600 text-sm">Harga tetap, tiada caj tersembunyi</p>
              </div>
              
              <div class="text-center">
                <div class="w-12 h-12 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h4 class="font-bold text-gray-900 mb-1">3-5 Hari Siap</h4>
                <p class="text-gray-600 text-sm">Proses yang pantas dan efisien</p>
              </div>
              
              <div class="text-center">
                <div class="w-12 h-12 bg-purple-100 rounded-2xl flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                </div>
                <h4 class="font-bold text-gray-900 mb-1">100% Tanpa Risiko</h4>
                <p class="text-gray-600 text-sm">Bayar selepas puas hati</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>