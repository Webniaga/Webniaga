<style>
  /* Enhanced mobile responsive table styles */
  .article-content :global(table) {
    width: 100%;
    margin: 2rem 0;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-collapse: collapse;
    background: white;
  }
  
  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid #e5e7eb;
    padding: 1rem;
    text-align: left;
    vertical-align: top;
  }
  
  .article-content :global(th) {
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    font-weight: 600;
    color: #0369a1;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .article-content :global(td) {
    background: white;
    color: #374151;
  }
  
  .article-content :global(tr:nth-child(even) td) {
    background: #f9fafb;
  }
  
  /* Mobile responsive table */
  @media (max-width: 768px) {
    .article-content :global(table) {
      font-size: 0.875rem;
    }
    
    .article-content :global(th),
    .article-content :global(td) {
      padding: 0.75rem 0.5rem;
    }
    
    /* Stack table cells vertically on very small screens */
    @media (max-width: 640px) {
      .article-content :global(table),
      .article-content :global(thead),
      .article-content :global(tbody),
      .article-content :global(th),
      .article-content :global(td),
      .article-content :global(tr) {
        display: block;
      }
      
      .article-content :global(thead tr) {
        position: absolute;
        top: -9999px;
        left: -9999px;
      }
      
      .article-content :global(tr) {
        border: 1px solid #e5e7eb;
        margin-bottom: 1rem;
        border-radius: 1rem;
        overflow: hidden;
        background: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }
      
      .article-content :global(td) {
        border: none;
        border-bottom: 1px solid #f3f4f6;
        position: relative;
        padding: 1rem;
        padding-left: 40%;
        text-align: left;
        background: white !important;
      }
      
      .article-content :global(td:before) {
        content: attr(data-label);
        position: absolute;
        left: 1rem;
        width: 35%;
        padding-right: 0.5rem;
        white-space: nowrap;
        font-weight: 600;
        color: #0369a1;
        top: 1rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
      
      .article-content :global(td:last-child) {
        border-bottom: none;
        border-radius: 0 0 1rem 1rem;
      }
      
      .article-content :global(td:first-child) {
        border-radius: 1rem 1rem 0 0;
      }
    }
  }
  
  /* Enhanced prose styles */
  .article-content :global(img) {
    width: 100%;
    height: auto;
    border-radius: 1.5rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    margin: 3rem 0;
