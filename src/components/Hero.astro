<section class="relative min-h-screen flex items-center pt-20 bg-gradient-to-br from-gray-50 via-white to-primary-50 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Geometric shapes -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-primary-100 rounded-full opacity-60 animate-bounce-gentle"></div>
    <div class="absolute top-40 right-20 w-16 h-16 bg-secondary-100 rounded-full opacity-40 animate-bounce-gentle" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-40 left-20 w-12 h-12 bg-accent-100 rounded-full opacity-50 animate-bounce-gentle" style="animation-delay: 2s;"></div>
    
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-5">
      <svg width="100%" height="100%">
        <defs>
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-6">
          <!-- Trust Badge -->
          <div class="inline-flex items-center bg-gradient-to-r from-green-50 to-primary-50 text-primary-700 px-4 py-2 rounded-full text-sm font-medium border border-primary-200 shadow-sm">
            <div class="flex items-center mr-2">
              <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
              <span class="w-2 h-2 bg-green-500 rounded-full ml-1 animate-pulse" style="animation-delay: 0.5s;"></span>
              <span class="w-2 h-2 bg-green-500 rounded-full ml-1 animate-pulse" style="animation-delay: 1s;"></span>
            </div>
            ✅ Terpercaya oleh 100+ Usahawan Malaysia
          </div>
          
          <!-- Main Headline -->
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
            <span class="block">Website Profesional</span>
            <span class="block">Hanya</span>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-secondary-600 text-5xl md:text-6xl lg:text-7xl">
              RM390
            </span>
          </h1>
          
          <!-- Value Proposition -->
          <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-100">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">100% Tanpa Risiko!</h3>
                <p class="text-gray-600 leading-relaxed">
                  <strong>Bayar selepas siap</strong> dan anda puas hati. Tiada deposit, tiada risiko. 
                  Kami yakin dengan kualiti kerja kami!
                </p>
              </div>
            </div>
          </div>
          
          <!-- Key Benefits -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-center space-x-3 bg-blue-50 rounded-xl p-4 border border-blue-200">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-blue-900">Siap 3-5 Hari</p>
                <p class="text-blue-700 text-sm">Pantas & berkualiti</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-3 bg-purple-50 rounded-xl p-4 border border-purple-200">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-purple-900">Hosting Percuma</p>
                <p class="text-purple-700 text-sm">Selamanya!</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="group inline-flex items-center justify-center bg-gradient-to-r from-primary-600 to-primary-700 text-white font-bold py-4 px-8 rounded-full text-lg shadow-2xl hover:shadow-3xl transition-all duration-300 hover:scale-105 transform relative overflow-hidden">
            <span class="absolute inset-0 bg-gradient-to-r from-primary-700 to-primary-800 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
            <span class="relative flex items-center">
              🚀 Tempah Slot Sekarang
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </span>
          </a>
          
          <a href="https://wa.me/601158913099?text=Saya%20berminat%20dengan%20servis%20buat%20website" class="inline-flex items-center justify-center border-2 border-green-500 text-green-600 font-bold py-4 px-8 rounded-full text-lg hover:bg-green-500 hover:text-white transition-all duration-300 hover:scale-105 transform shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"></path>
            </svg>
            WhatsApp Terus
          </a>
        </div>
        
        <!-- Urgency & Social Proof -->
        <div class="bg-gradient-to-r from-red-50 to-orange-50 rounded-2xl p-6 border border-red-200">
          <div class="flex items-start space-x-4">
            <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="font-bold text-red-900 mb-1">⚡ Slot Terhad Bulan Ini!</p>
              <p class="text-red-800 text-sm leading-relaxed">
                Hanya <strong>5 slot</strong> tersisa untuk bulan ini. Tempah sekarang sebelum terlambat!
              </p>
            </div>
          </div>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-6">
          <div class="text-center bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <div class="text-2xl font-bold text-primary-600">100+</div>
            <div class="text-xs text-gray-600">Website Siap</div>
          </div>
          <div class="text-center bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <div class="text-2xl font-bold text-green-600">3-5</div>
            <div class="text-xs text-gray-600">Hari Siap</div>
          </div>
          <div class="text-center bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <div class="text-2xl font-bold text-purple-600">100%</div>
            <div class="text-xs text-gray-600">Tanpa Risiko</div>
          </div>
        </div>
      </div>
      
      <!-- Image -->
      <div class="relative">
        <div class="relative z-10">
          <img 
            src="https://img.webniaga.my/servis-buat-website.png" 
            alt="Laptop dengan skrin website" 
            class="w-full max-w-lg mx-auto rounded-2xl shadow-2xl transform hover:scale-105 transition-transform duration-500"
          />
          
          <!-- Floating elements -->
          <div class="absolute -top-6 -left-6 bg-white rounded-2xl p-4 shadow-xl border border-gray-100 transform rotate-3 hover:rotate-0 transition-transform duration-500">
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <div>
                <div class="text-sm font-semibold text-gray-900">Siap 3-5 Hari</div>
                <div class="text-xs text-gray-500">Pantas & Berkualiti</div>
              </div>
            </div>
          </div>
          
          <div class="absolute -bottom-6 -right-6 bg-gradient-to-r from-primary-500 to-primary-600 text-white rounded-2xl p-4 shadow-xl transform -rotate-3 hover:rotate-0 transition-transform duration-500">
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-white rounded-full animate-pulse"></div>
              <div>
                <div class="text-sm font-semibold">RM390 Sahaja</div>
                <div class="text-xs text-primary-100">Bayar Selepas Siap</div>
              </div>
            </div>
          </div>
          
          <div class="absolute top-1/2 -right-12 bg-white rounded-2xl p-3 shadow-xl border border-gray-100 transform translate-y-[-50%] hover:scale-110 transition-transform duration-300">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div class="text-xs font-medium text-gray-700">100% Puas Hati</div>
            </div>
          </div>
          
          <!-- New floating testimonial -->
          <div class="absolute top-20 -left-8 bg-white rounded-xl p-3 shadow-lg border border-gray-100 max-w-48 transform hover:scale-105 transition-transform duration-300">
            <div class="flex items-center space-x-2 mb-2">
              <div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center text-white text-xs font-bold">A</div>
              <div>
                <div class="text-xs font-semibold text-gray-900">Puan Aisyah</div>
                <div class="text-xs text-gray-500">Usahawan</div>
              </div>
            </div>
            <p class="text-xs text-gray-600">"Sangat puas hati! Website cantik dan proses mudah."</p>
            <div class="flex text-yellow-400 text-xs mt-1">
              ⭐⭐⭐⭐⭐
            </div>
          </div>
        </div>
        
        <!-- Background decoration -->
        <div class="absolute inset-0 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-3xl transform rotate-6 scale-105 opacity-20"></div>
      </div>
    </div>
  </div>
</section>